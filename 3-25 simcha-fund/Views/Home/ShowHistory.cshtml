@using SimchaFundManager
@using _3_25_simcha_fund.Models
@model ShowHistoryViewModel
<h2>ShowHistory for @Model.ContributorName</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>
        </tr>
        @foreach(Transaction t in Model.Transactions)
        {
        <tr>
            <td>@(t.SimchaId == null ? "Deposit" : $"Contributed to the {Model.Simchos[(int)t.SimchaId].SimchaName}" )</td>
            <td>@t.Date.ToShortDateString()</td>
            <td>@t.Amount.ToString("C")</td>
        </tr>
        }
    </table>
</div>

